<div class="container mt-3">
  <div class="row">
    <div class="md-8">
      <h2>List Mahasiswa</h2>
      <a href="/member/add" class="btn btn-info mt-3">Tambah mahasiswa</a>

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success mt-3" role="alert"><%= msg %></div>
      <% } %> <% if (datas.length === 0) { %>
      <div class="alert alert-danger mt-3" role="alert">Data belum ada</div>
      <% } else { %>
      <table class="table mt-3">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">Nim</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% datas.forEach((data, i) => { %>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= data.nama %></td>
            <td><%= data.nim %></td>
            <td>
              <a href="/member/detail/<%= data.nama %>" class="btn btn-info"
                >Detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>
  </div>
</div>
